@model dynamic

@{
    this.Layout = "~/Views/_MenuLayout.cshtml";
    this.ViewBag.Title = "Scenaria";
    this.ViewBag.ActionName = "Scenaria";
}

@section  scripts{
    <script src="@(this.Url.Content("~/Binding/ViewModels/ScenariaViewModel.js"))" type="text/javascript"> </script>}

@section css {}
@section JQueryOnReady{}

<div class="row">

    <div class="col-md-12">
    </div>

    <div class="col-md-12">
        <div class="boxModule">
            <div class="boxModuleHeader" data-bind="loadingWhen: isCommandRunning, loaderClass: 'loader-dark'">
                @(this.ViewBag.Title)
            </div>
            <div class="boxModuleBody col-md-offset-1">

                <div class="row top-buffer form-group">
                    <div class="col-md-2">
                        Zones :
                    </div>
                    <div class="col-md-10">
                        <select id="zoneSel" data-placeholder="Select Zone" data-bind="chosen: { chosenOption: { allow_single_deselect: true }, source: zones, valueProp: 'Name', selectedValue: selectedZone, displayProp: 'Name' }"></select>
                        &nbsp;
                        <button data-bind="enable: shouldEnableSearch, click: search" class="btn btn-primary">Search  &nbsp;<span class=" glyphicon glyphicon-search"></span></button>

                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-md-2">
                        Category :
                    </div>
                    <div class="col-md-5">
                        <select id="selecCat" class="input-xlarge" data-placeholder="Select Category" data-bind="enable: selectedZone() !== undefined, chosen: { chosenOption: { allow_single_deselect: true }, source: categories, valueProp: 'Name', selectedValue: selectedCategory, displayProp: 'Name' }"></select>
                    </div>
                </div>


            </div>
            <div class="col-md-12">


                <div>
                    <br />
                    <table id="grid">
                        <tr>
                            <td></td>
                        </tr>
                    </table>
                    <div id="pager"></div>
                    <br />
                </div>
            </div>
        </div>
    </div>
</div>
